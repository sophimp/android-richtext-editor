<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="68dp"
        android:background="@drawable/bg_preview_media"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/edit_annex_icon_iv"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:layout_marginLeft="12dp"
            android:scaleType="center"
            android:src="@mipmap/icon_file_audio" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:orientation="vertical"
            android:paddingRight="12dp">

            <TextView
                android:id="@+id/edit_annex_title_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="middle"
                android:singleLine="true"
                android:textColor="#FF232323"
                android:textSize="16sp"
                tools:text="音频文件名.mov" />

            <TextView
                android:id="@+id/edit_annex_subtitle_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:textColor="#D93C3C43"
                android:textSize="13sp"
                tools:text="00:00  5.3M" />

        </LinearLayout>
    </LinearLayout>


</LinearLayout>