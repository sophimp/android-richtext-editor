<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <include
        android:id="@+id/icl_title"
        layout="@layout/common_bottom_dialog_title" />

    <EditText
        android:id="@+id/et_link_addr"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:hint="http/https link"
        android:layout_marginStart="16dp"
        android:textColor="#232323"
        android:textSize="15sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/icl_title" />

    <EditText
        android:id="@+id/et_link_addr_name"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginBottom="10dp"
        android:hint="link name (options)"
        android:textColor="#232323"
        android:textSize="15sp"
        android:layout_marginStart="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/et_link_addr" />
</androidx.constraintlayout.widget.ConstraintLayout>